<%= form_for(@employee) do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <%= f.label "Nome" %><br>
    </div>
    <div class="panel-body">
      <%= f.text_field :name, size: "50", class: "form_control" %><br>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <%= f.label "CPF" %><br>
    </div>
    <div class="panel-body">
      <%= f.text_field :cpf, size: "50", class: "form_control" %><br>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <%= f.label "RH" %><br>
    </div>
    <div class="panel-body">
      <%= f.text_field :rh, size: "50", class: "form_control" %><br>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <%= f.label "Telefone" %><br>
    </div>
    <div class="panel-body">
      <%= f.text_field :phone, size: "50", class: "form_control" %><br>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <%= f.label "Salário" %><br>
    </div>
    <div class="panel-body">
      <%= f.text_field :salary, size: "50", class: "form_control" %><br>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <%= f.label "Pizzaria" %><br>
    </div>
    <div class="panel-body">
      <% if @employee.restaurant == nil %>
      <%= f.text_field :restaurant, size: "50" %>
    <% else %>
      <%= f.text_field :restaurant, size: "50", :value => @employee.restaurant.name %><br>
      <% end %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Cadastrar Dados do Funcionário", class: "btn btn-success" %>
  </div>
<% end %>
