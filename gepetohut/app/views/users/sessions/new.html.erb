<div class="container">
  <h1>Entrar</h1>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= f.label "Email" %><br>
      </div>
      <div class="panel-body">
        <%= f.text_field :email, size: "50", class: "form_control" %><br>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <%= f.label "Senha" %><br>
      </div>
      <div class="panel-body">
        <%= f.password_field :password, size: "50", class: "form_control" %><br>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Entrar", class: "btn btn-success" %>
    </div>
<% end %>

<%= render "users/shared/links" %>
