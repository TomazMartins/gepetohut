<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="container">
  <div class="row text-center pad-top ">
    <div class="col-md-12">
      <h2>GEPETOHUT</h2>
    </div>
  </div>

  <div class="row  pad-top">
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
      <div class="panel panel-default">

        <div class="panel-heading">
         <strong> Cadastre-se </strong>  
        </div>

        <div class="panel-body">
          <form role="form">
            <br/>
            <div class="form-group input-group">
              <span class="input-group-addon">
                 <i class="fa fa-circle-o-notch"></i>
              </span>
              <%= f.text_field :name, class: "form_control",hide_label: true, placeholder: "Digite seu nome" %>
            </div>

            <div class="form-group input-group">
              <span class="input-group-addon">
                <i class="fa fa-tag"></i>
              </span>
              <%= f.text_field :address, class: "form_control",hide_label: true, placeholder: "Digite seu endereço" %>
            </div>

            <div class="form-group input-group">
              <span class="input-group-addon">
                @
              </span>
              <%= f.text_field :email, class: "form_control",hide_label: true, placeholder: "Digite seu email" %>
            </div>

            <div class="form-group input-group">
              <span class="input-group-addon">
                <i class="fa fa-lock"  ></i>
              </span>
              <%= f.password_field :password, class: "form_control", hide_label: true, placeholder: "Digite a senha" %>
            </div>

            <div class="form-group input-group">
              <span class="input-group-addon">
                <i class="fa fa-lock"  ></i>
              </span>
              <%= f.password_field :password_confirmation,class: "form_control", hide_label: true, placeholder: "Digite a senha novamente" %> 
            </div>
                                     
            <%= f.submit "Cadastrar",class: "btn btn-success" %>
            <hr />
            Já é cadastrado?  <%= link_to "Efetue o login",new_session_path(resource_name), style: "color: blue" %>
          </form>
        </div>
      </div>
    </div>     
  </div>

<% end %>