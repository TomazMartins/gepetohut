<h1>Escolha as opções desejadas abaixo!</h1>
<div class="page-header">
  </div>
<div class="col-md-15">
<%= form_tag home_page_index_path, :method => 'get', :id => "register-form" do %>
  <table class="table">
    <thead>
      <tr>
        <th>Código</th>
        <th>Tipo de Pizza</th>
        <th>Preço</th>
        <th>Rating</th>
        <th>Quantidade</th>
      </tr>
    </thead>
    <tbody>
    <% if Pizza.all[0] == nil %>
      <tr>
        <td>1</td>
        <td>-</td>
        <td>-</td>
        <td>-</td>
        <td>
			-
		</td>
      </tr>
    <% else %>
	    	<% @pizzas.each do |pizza| %>
			  <tr>
	            <td><%= pizza.id %></td>
	            <td><%= pizza.name %></td>
	            <td>R$ <%= pizza.price %></td>
	            <td><%= pizza.rating %></td>
	            <td>
					<%= text_field_tag pizza.id.to_s.to_sym, params[pizza.id.to_s.to_sym] %>
				</td>
	          </tr>
	    	<% end %>
    <% end %>
    </tbody>
  </table>
  <div class="span7 text-center"><%= submit_tag "Montar", class: "btn btn-lg btn-primary btn-sample", style: "color: white;", :name => nil %></div>
<% end %>
</div>

<div class="span7 text-center"><%= link_to "Fazer pedido!", make_order_finish_order_path, class: "btn btn-lg btn-primary btn-sample", style: "color: white;" %>
