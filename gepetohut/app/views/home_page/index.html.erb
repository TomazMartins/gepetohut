<% if current_user.present? %>
	<div style="background: #600000 !important"  class="center jumbotron">
	  <h1>Bem-Vindo(a) <%= current_user.name %></h1>

	  <h2>
	    Faça seu pedido e aproveite as pizzas mais gostosas da região!
	  </h2>

	  <%= link_to "Fazer pedido!", make_order_index_path, class: "btn btn-lg btn-primary btn-sample", style: "color: white" %>
	</div>
	  <div class="page-header">
      </div>
      <h1>Pedidos Feitos</h1>
	<div class="col-md-15">
          <table class="table">
            <thead>
              <tr>
                <th>Código da Pizza</th>
                <th>Descrição</th>
                <th>Preço</th>
                <th>Hora do Pedido</th>
              </tr>
            </thead>
            <tbody>
            <% if current_user.orders[0] == nil %>
              <tr>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
              </tr>
            <% else %>
            <% current_user.orders.last.pizzas.each do |pizza| %>
			  <tr>
	            <td><%= pizza.id %></td>
	            <td><%= pizza.name %></td>
	            <td>R$ <%= pizza.price %></td>
	            <td><%= pizza.created_at %></td>
	          </tr>
	    	<% end %>
	    	<% end %>
            </tbody>
          </table>
        </div>
<% else %>

<div style="background: #600000 !important"  class="center jumbotron">
  <h1>Bem-Vindo(a) à Gepetohut</h1>

  <h2>
    Faça seu pedido e aproveite as pizzas mais gostosas da região!
  </h2>

  <%= link_to "Cadastre-se Agora!", new_user_registration_path, class: "btn btn-lg btn-primary btn-sample", style: "color: white" %>
</div>

<div style="background: #600000 !important"  class="center jumbotron">
<div class="span3">
